<% layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 500px"></div>

<h1>All Markers</h1>
<% for (let marker of markers) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= marker.images.length > 0 ? marker.images[0].url : '' %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= marker.title %></h5>


                    <p class="card-text"><%= marker.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= marker.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/markers/<%= marker._id %>">View <%= marker.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    // parse all markers
    const markers = { features: <%- JSON.stringify(markers) %>}
</script>

<script crossorigin="anonymous" src="/JS/clusterMap.js"></script>